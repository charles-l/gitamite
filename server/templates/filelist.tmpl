{{define "filelist"}}
    {{$repo := .Repo}}
    <table>
    {{range .Entries}}
        <tr><td>{{if is_file .}}<a href="{{path $repo .}}">{{.Name}}</a>
            {{else}}<a href="{{path $repo .}}"><b>{{.Name}}/</b></a>{{end}}</td></tr>
    {{end}}
    </table>

    {{if .README}}
        {{.README | markdown}}
    {{end}}
{{end}}
